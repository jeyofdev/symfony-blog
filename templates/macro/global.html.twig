{# Set the page title #}
{% macro pageTitle(title) %}
    <h1 class="text-center">{{ title }}</h1>
{% endmacro pageTitle %}



{# Pagination of posts #}
{% macro pagination(posts) %}
    <div class="d-flex justify-content-between my-4">
        {{ knp_pagination_render(posts) }}
    </div>
{% endmacro pagination %}

