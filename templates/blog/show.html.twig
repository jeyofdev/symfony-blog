{% extends 'base.html.twig' %}
{% import 'blog/parts/macro-list-posts.html.twig' as listPosts %}

{% block title %}{{ parent() }} | {{ post.title }}{% endblock %}

{% block body %}
    <!-- the current post -->
    <div class="blog-single mt-50">
        <div class="card">
            {{ listPosts.header("https://via.placeholder.com/1100x425", "mb-80") }}

            <div class="card-body mx-50">
                {% if post.categories.values is not empty %}
                    <p class="mb-30 categories">
                        {% for key, category in post.categories.values %}
                            <a href="{{ path('blog.category.index', {id: category.id, slug: category.slug}) }}">{{ category.title }}</a>{% if key != (post.categories.values | length - 1) %}{{', '}}{% endif %}
                        {% endfor %}
                    </p>
                {% endif %}
                <h1 class="card-title mb-35">{{ post.title | capitalize }}</h1>
                <p class="card-text">{{ post.content | nl2br }}</p>
            </div>

            <div class="card-footer mx-50 mt-30 pt-30">
                <p class="card-muted">written on {{ post.createdAt | date("d F Y") }}</p>
            </div>
        </div>
    </div>


    <!-- the related posts -->
    <div class="blog-related mt-125 mx-50">
        <h4 class="text-secondary bloc-title mb-35">You may also like</h4>
        <div class="row">
            {% for relatedPost in relatedPosts %}
                <div class="col-12 col-md-4 mb-0">
                    <div class="card">
                        {{ listPosts.header("https://via.placeholder.com/500x225", "mb-3") }}

                        <div class="card-body">
                            <a class="d-block card-title" href="{{ path('blog.show', {id: relatedPost.id, slug: relatedPost.slug}) }}">
                                <h3>{{ relatedPost.title | capitalize }}</h3>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


    <!--  the post comments -->
    <div class="blog-comment mt-75 mx-50">
        <h4 class="text-secondary bloc-title mb-35">
            {% if post.comments | length is same as (0) %}
                {{ 'No comments' }}
            {% elseif post.comments | length is same as (1) %}
                {{ post.comments | length ~ " comment" }}
            {% else %}
                {{ post.comments | length ~ " comments" }}
            {% endif %}
        </h4>

        <div class="row">
            {% for comment in post.comments %}
                <div class="col-12 comment mb-30">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-title">{{ comment.user }} (<small>{{ comment.createdAt | date("d/m/Y Ã  H:i:s") }}</small>)</p>
                            <p class="card-text">{{ comment.content | raw }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
