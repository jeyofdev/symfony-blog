{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ post.title }}{% endblock %}

{% block body %}
    <div class="blog-single mt-5">
        <div class="card">
            <div class="card-header mb-2">
                <img class="img-fluid" src="https://via.placeholder.com/1100x425" alt="">
            </div>

            <div class="card-body">
                <h1 class="card-title">{{ post.title }}</h1>
                <p class="card-text">{{ post.content | nl2br }}</p>
                <p class="card-muted">written on {{ post.createdAt | date("d F Y") }}</p>
            </div>
        </div>
    </div>
{% endblock %}
