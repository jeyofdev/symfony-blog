{% extends 'base.html.twig' %}

{% block title %}{{ parent() ~  " | List of posts" }}{% endblock %}

{% block body %}
    <h1 class="text-center">{{ "List of blog posts" }}</h1>

    <!-- list of posts -->
    <div class="blog-list mt-75">
        {% if posts is not empty %}
            <div class="row mt-5">
                {% for post in posts %}
                    <div class="col-12 col-md-6 mb-80">
                        <div class="card">
                            <div class="card-header mb-35">
                                <img class="img-fluid" src="https://via.placeholder.com/500x225" alt="">
                            </div>
                            <div class="card-body">
                                <a class="d-block card-title mb-35" href="{{ path('blog.show', {id: post.id}) }}">
                                    <h2>{{ post.title | capitalize }}</h2>
                                </a>
                                <p class="card-text">{{ post.content | truncate(250, true) | nl2br }}</p>
                                <p class="card-muted my-35">Written on {{ post.createdAt | date("d F Y") }}</p>
                                <a class="btn btn-primary" href="{{ path('blog.show', {id: post.id}) }}">see more</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="d-flex justify-content-between my-4">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}
